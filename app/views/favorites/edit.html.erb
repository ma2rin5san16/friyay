<h1>評価する</h1>

<div class="container">

<%= form_with model: @favorite, url: task_favorite_path(@task, @favorite), local: true, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :comment, "コメント", class: "form-label" %>
    <%= f.text_field :comment, class: "form-control" %>
  </div>
  <div class="field" id="star">
      <%= f.label :rating, "評価", class: "form-label" %>
      <%= f.hidden_field :rating, id: :review_star %>
    </div>


  <!-- 評価javascript -->
  <script>
$('#star').empty();
$('#star').raty({
  size     : 36,
  starOff:  '<%= asset_path('star-off.png') %>',
  starOn : '<%= asset_path('star-on.png') %>',
  scoreName: 'favorite[rating]' 
});
</script>

  <div class="mb-3">
    <%= f.submit "評価する", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
