<h1>評価する</h1>

<div class="container">

<%= form_with model: @favorite, url: task_favorite_path(@task, @favorite), local: true, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :comment, "コメント", class: "form-label" %>
    <%= f.text_field :comment, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :rating, "とりあえず１", class: "form-label" %>
    <%= f.number_field :rating, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.submit "投稿する" %>
  </div>
<% end %>
</div>