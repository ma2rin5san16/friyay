<div class="container">
<legend><%= current_user.name %>さんのページ</legend>

<div class="card mt-3 mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag 'logo.png', class:"img-thumbnail" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5>プロフィール</h5>
        <h6 class="card-text"><%= @current_user.name %></h6>
        <h6 class="card-text"><%= @current_user.birthday.year %>年生まれ</h6>
        <h6 class="card-text"><%= @current_user.gender_i18n %></h6>
        <%= link_to "edit", edit_profile_path %>
      </div>
    </div>
  </div>
</div>

<div class="d-grid gap-2">
  <%= link_to "提案一覧", suggested_list_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "気になるリスト", favorited_list_path, class: "btn btn-lg btn-primary" %>
</div>

</div>