<div class="container">
<legend><%= @user.name %>さんのページ</legend>

<div class="card mt-3 mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag 'logo.png', class:"img-thumbnail" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5>プロフィール</h5>
        <h6 class="card-text"><%= @user.name %></h6>
        <h6 class="card-text"><%= @user.birthday.year %>年生まれ</h6>
        <h6 class="card-text"><%= @user.gender_i18n %></h6>
        <% if @user==current_user %>
          <%= link_to "edit", edit_user_path(current_user) %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="d-grid gap-2">
  <%= link_to "提案一覧", user_suggested_list_path(@user), class: "btn btn-lg btn-primary" %>
  <%= link_to "気になるリスト", user_favorited_list_path(@user), class: "btn btn-lg btn-primary" %>
</div>

</div>