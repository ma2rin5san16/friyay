<h1>過ごしかた提案ページ</h1>

<div class="container">

<%= form_with model: @task, local: true, data: { turbo: false } do |f| %>
  <div class="mb-3">
    <%= f.label :content, "過ごしかた案", class: "form-label" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :prepare, "準備内容", class: "form-label" %>
    <%= f.text_field :prepare, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :easy_easy, "手軽" %>
    <%= f.radio_button :easy, :easy %>
    <%= f.label :easy_normal, "やや手軽" %>
    <%= f.radio_button :easy, :normal %>
    <%= f.label :easy_difficult, "難しい" %>
    <%= f.radio_button :easy, :difficult %><br>
  </div>
  <div class="mb-3">
    <%= f.submit "登録" %>
  </div>
<% end %>
</div>