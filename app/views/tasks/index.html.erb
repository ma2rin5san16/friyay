<div class="container">
  <h1>過ごしかた一覧</h1>

  <%= search_form_for @q, url: tasks_path do |f| %>
    <%= f.label :content_cont, "過ごしかた" %>
    <%= f.search_field :content_cont %>

    <%= f.select :easy_eq, Task.easies_i18n.invert.map { |key, value| [key, Task.easies[value]]}, include_blank:'指定なし', class:'form-control mr-1' %>

    <%= f.submit "検索" %>
  <% end %>

  <% @tasks.each do |task| %>
    <div class="task-list">
      <div class="task-content"><%= task.content %></div>
      <div class="task-prepare"><%= task.prepare %></div>
      <div class="task-easy"><%= task.easy_i18n %></div>
      <div class="task-belongs-to">by：<%= link_to "#{task.user.name}", '#'%>さん</div>
    </div>
  <% end %>
</div>