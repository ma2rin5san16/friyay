<div class="container">
<legend>パスワード再設定</legend>
  <%= form_with(model: @user, url: password_reset_path(params[:id]), local: true, data: { turbo: false }) do |f| %>
    <%= render 'shared/error_messages', object: @user %>
    <%= hidden_field_tag :email, @user.email %>
    <div class="form-group">
      <%= hidden_field_tag :email, @user.email %>
      <div class="form-floating mb-3">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="form-floating mb-3">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード（再入力）" %>
        <%= f.label :password_confirmation, "パスワード（再入力）" %>
      </div>
    </div>
    <%= f.submit "パスワードを更新する", class: "btn btn-primary mt-4" %>
  <% end %>
</div>

